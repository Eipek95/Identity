@model List<AdminModel.AssignRoleToUserViewModel>
@{
    ViewData["Title"] = "AssignRoleToUser";
}
<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Kullanıcıya Rol Atama</h2>
        <form asp-action="AssignRoleToUser" asp-route-userId="@ViewBag.userId" method="post">

            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check">
                    <input class="form-check-input" asp-for="@Model[i].Exist">
                    <label class="form-check-label" for="flexCheckDefault">
                        @Model[i].Name
                    </label>
                    <input asp-for="@Model[i].Name" type="hidden">
                    <input asp-for="@Model[i].Id" type="hidden">
                </div>
            }

            <div class="form-group mt-3">
                <input type="submit" value="Rol Ata" class="btn btn-primary" />
            </div>
        </form>
        <div class="mt-3">
            <a asp-action="UserList" asp-controller="Home">Kullanıcı Listesine Geri Dön</a>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


